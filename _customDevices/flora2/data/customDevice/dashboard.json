[
  {
    "type": "group",
    "name": "dasboard",
    "caption": "Dashboard",
    "data": [
      {
        "type": "text",
        "name": "clock",
        "caption": "Time",
        "readonly": 1,
        "event": "~/event/clock/time",
        "inputtype": "datetime"
      },
      {
        "type": "text",
        "name": "pressure",
        "caption": "Pressure",
        "readonly": 1,
        "event": "~/event/device/pressure",
        "suffix": " hPa"
      },
      {
        "type": "text",
        "name": "temperature",
        "caption": "Temperature",
        "readonly": 1,
        "event": "~/event/device/temperature",
        "suffix": " °C"
      },
      {
        "type": "text",
        "name": "illuminance",
        "caption": "Illuminance",
        "readonly": 1,
        "event": "~/event/device/illuminance",
        "suffix": " lux"
      },
      {
        "type": "text",
        "name": "uv",
        "caption": "UV-A",
        "readonly": 1,
        "event": "~/event/device/uv",
        "suffix": " µW/cm²"
      },
      {
        "type": "checkbox",
        "name": "relay0",
        "caption": "Relay 0",
        "action": "~/set/device/relay 0",
        "event": "~/event/device/relay0"
      },
      {
        "type": "checkbox",
        "name": "relay1",
        "caption": "Relay 1",
        "action": "~/set/device/relay 1",
        "event": "~/event/device/relay1"
      }
    ]
  }
]
